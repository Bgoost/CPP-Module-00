# Standard
NAME				= phonebook

# Directories
OBJ_DIR				= obj/

# Compiler and CFlags
CC					= c++
CFLAGS				= -Wall -Werror -Wextra -MMD -std=c++98
RM					= rm -f
SRCS 				= PhoneBook.cpp Contact.cpp main.cpp UserInterface.cpp Utils.cpp

OBJ = $(patsubst %.cpp,$(OBJ_DIR)%.o,$(SRCS))
DEP = $(SRCS:.cpp=.d)

# Build rules
start:				
					@make all

all: 				$(NAME)

$(NAME): 			$(OBJ)
					@$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
					@echo "\033[1;32mAll "$(NAME) "done!!âœ…\033[1;97m"

# Compile object files from source files
$(OBJ_DIR)%.o:		%.cpp Makefile
					mkdir -p $(@D)
					@$(CC) $(CFLAGS) -c $< -o $@
					@echo "\033[1;31Compiling...\033[1;97m "$< "âœ…"

clean:
					@$(RM) -rf $(OBJ_DIR)
					@echo "\033[1;32mAll cleaned ðŸ’©ðŸ—‘\33[1;97m"

fclean: 			clean
					@$(RM) $(NAME)

re: 				fclean all

# Phony targets represent actions not files
.PHONY: 			start all clean fclean re
-include $(DEP)
